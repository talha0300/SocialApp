<div class="container">
  <% @users.each do |user| %>


    <div class="row record" rows=2>
      <div class="col-xs-3" >

      </div>
      <div class="col-xs-3" style="background-color:pink;">
        <%= user.email%>
      </div>
      <div class="col-xs-3 follow-option" style="background-color:yellow;">
        <%if current_user.followships.exists?(followee_id:user.id)%>
          <span>Followed</span>
        <%else%>
          <%= link_to "Follow", followships_path(followee_id:user),method: :post,class:"btnn",remote:true%>
          <span class="followed"></span>
        <%end%>
      </div>
      <div class="col-xs-3" >

      </div>
  </div>
  <% end %>
</div>
