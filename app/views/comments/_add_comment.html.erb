<h2>Add a comment:</h2>
<%= form_with(model: [ @post, @post.comments.build ],class: "form-horizontal", local: true) do |form| %>


  <div class="form-group">
    <%= form.label :body ,class: "control-label col-sm-2"%>
    <div class="col-sm-7">
      <%= form.text_area :body,class: "form-control",rows:"5" ,required:true%>
    </div>

  </div>
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-10",style='background-color:green;'>
        <%= form.submit %>
    </div>

  </div>
<% end %>


<%= link_to 'Back', root_path %>
