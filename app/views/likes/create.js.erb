$('.btn').bind('ajax:success',function() {
  $(this).closest('div').find('.likes-counter').html(<%= "#{@post.likes.count}" %>);
  $(this).closest('div').find('.btn').html("Liked");
  var post_id = <%= "#{@post.id}" %>
  var like_id = <%= "#{@like.id}" %>
  $(this).attr("href",  `/posts/${post_id}/likes/${like_id}`)
  $(this).attr("data-method","delete")

});
