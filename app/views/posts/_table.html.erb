<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Attachment</th>
      <th>Content</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user[:email] %></td>
        <td><%= post.image %></td>
        <td>
          <figure class="figure">
          <%= image_tag(post.image,:class => "figure-img img-fluid z-depth-1",:style => "width: 400px")%>
          <figcaption class="figure-caption" style="max-width: 400px"><%= post.content %></figcaption>
          <figcaption class="figure-caption text-right"><strong>Created BY:</strong><%= current_user.email %></figcaption>
          <figcaption class="figure-caption">
            <%= link_to "Add Comment", new_post_comment_path(post), :type => "button", :class => "btn btn-primary btn-sm" %>
          </figcaption>
        </figure>
      </td>


        <td><%= link_to "Add Comment", new_post_comment_path(post) %></td>
        <td><%= link_to "Comments", post_path(post) %></td>
        <td><%= link_to "Like", post_likes_path(post, :action => 1), method: :post %>
          <%= "#{post.likes.count}" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
